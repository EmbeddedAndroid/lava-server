{% extends 'base.jinja2' %}
{% block body %}
device_type: nrf528240-pca10056
board_id: '{{ board_id|default('0000000000') }}'

actions:
  deploy:
    methods:
      image:

  boot:
    connections:
      serial:
      ssh:
    methods:
      nrfjprog:
        parameters:
          command:
            nrfjprog
          options:
          - -f NRF52
{% endblock -%}
